<p id="notice"><%= notice %></p>

<h1>Dealers</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Contact number</th>
      <th>Street address</th>
      <th>Suburb</th>
      <th>About us</th>
      <th>Image data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dealers.each do |dealer| %>
      <tr>
        <td><%= dealer.company_name %></td>
        <td><%= dealer.contact_number %></td>
        <td><%= dealer.street_address %></td>
        <td><%= dealer.suburb %></td>
        <td><%= dealer.about_us %></td>
        <td><img src="<%= dealer.image_url %>"></td>
        <td><%= link_to 'Show', dealer %></td>
        <td><%= link_to 'Edit', edit_dealer_path(dealer) %></td>
        <td><%= link_to 'Destroy', dealer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
